<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        app:autoSizeMaxTextSize="60sp"
        app:autoSizeMinTextSize="30dp"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/rodchenkoinlinectt"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/rateus"
        android:textColor="@color/Yellow"
        android:textSize="35sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        app:autoSizeMaxTextSize="35sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        android:fontFamily="@font/aa"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="@string/rateus_description"
        android:textColor="@color/Cyan" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="189dp"
        android:clickable="true"
        android:maxHeight="56dp"
        android:minHeight="0dp"
        android:numStars="5"
        android:progressDrawable="@drawable/star_bar"
        android:progressTint="@color/Yellow"
        android:rating="4"
        android:scaleX="1"
        android:scaleY="1"
        android:stepSize="1" />
    <com.appodeal.ads.BannerView
        android:id="@+id/appodeal_banner_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:visibility="visible"
        tools:visibility="visible" />

    <com.appodeal.ads.MrecView
        android:id="@+id/appodealMrecView"
        android:layout_width="300dp"
        android:layout_height="187dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:visibility="visible" />
</RelativeLayout>